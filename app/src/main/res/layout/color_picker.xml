<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/ColorPickerLayout"
    android:background="@android:color/black">



    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_red_dark"
        android:background="@drawable/red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_red_light"
        android:background="@drawable/red_light"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button_red_dark"
        android:layout_toRightOf="@+id/button_red_dark"
        android:layout_toEndOf="@+id/button_red_dark"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_orange_dark"
        android:background="@drawable/orange_dark"
        android:onClick="vishank"
        android:layout_alignBottom="@+id/button_red_light"
        android:layout_toRightOf="@+id/button_red_light"
        android:layout_toEndOf="@+id/button_red_light"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_orange_dark"
        android:layout_toEndOf="@+id/button_orange_dark" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_below="@+id/button_red_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button4"
        android:layout_toLeftOf="@+id/button_orange_dark"
        android:layout_toStartOf="@+id/button_orange_dark" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button_orange_dark"
        android:layout_alignStart="@+id/button_orange_dark" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="3dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button8"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button12"
        android:layout_toLeftOf="@+id/button_orange_dark"
        android:layout_toStartOf="@+id/button_orange_dark" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button13"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:background="@drawable/red_dark"
        android:onClick="vishank"
        android:layout_alignTop="@+id/button14"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11" />


</RelativeLayout>
