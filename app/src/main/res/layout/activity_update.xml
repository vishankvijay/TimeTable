<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.UpdateActivity" >

    <AutoCompleteTextView
        android:id="@+id/AutoCompleteUpdateTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:singleLine="true"
        android:textStyle="italic"
        >

        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/UpdateColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AutoCompleteUpdateTextView"
        android:layout_alignRight="@+id/AutoCompleteUpdateTextView"
        android:layout_below="@+id/AutoCompleteUpdateTextView"
        android:layout_marginTop="22dp"
        android:gravity="left|center"
        android:text="Pick Color"
        android:textStyle="italic" />

    <Button
        android:id="@+id/UpdateStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UpdateDescriptionEdittext"
        android:layout_below="@+id/UpdateColorButton"
        android:background="@android:color/transparent"
        android:padding="25dp"
        android:text="Starts\n10:30"
        android:textStyle="italic" />

    <Button
        android:id="@+id/UpdateEndButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UpdateDescriptionEdittext"
        android:layout_alignRight="@+id/UpdateDescriptionEdittext"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:padding="25dp"
        android:text="Ends\n11:30"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/UpdateDescriptionEdittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UpdateColorButton"
        android:layout_below="@+id/UpdateStartButton"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:singleLine="true"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/UpdateClassRoomEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UpdateStartButton"
        android:layout_alignRight="@+id/UpdateDescriptionEdittext"
        android:layout_below="@+id/UpdateStartButton"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:singleLine="true"
        android:textStyle="italic" />

</RelativeLayout>